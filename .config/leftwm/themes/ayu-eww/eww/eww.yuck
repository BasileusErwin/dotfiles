(defwindow laptop-with-dual-monitor :monitor 1
  :geometry (geometry :x "5px" :y "2%" :width "4%" :height "96%")
  :reserve (struts :distance "5%" :side "left")
  :wm-ignore false
    (bar :monitor 1))

(defwindow laptop-with-monitor :monitor 1
  :geometry (geometry :x "5px" :y "2%" :width "4%" :height "96%")
  :reserve (struts :distance "5%" :side "left")
  :wm-ignore false
    (bar :monitor 1))

(defwindow laptop :monitor 0
  :geometry (geometry :x "5px" :y "2%" :width "4%" :height "96%")
  :reserve (struts :distance "5%" :side "left")
  :wm-ignore false
    (bar :monitor 0))
